{
  "name": "elean",
  "version": "0.1.0",
  "description": "A starting point for RESTful MERN apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shanhuiyang/TypeScript-MERN-Starter.git"
  },
  "author": "David Woolsey",
  "license": "MIT",
  "scripts": {
    "build": "cd client && yarn build && cd .. && yarn build-server",
    "build-server": "yarn build-ts",
    "build-ts": "tsc",
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "debug": "yarn build-server && yarn watch-debug",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint -c .eslintrc.js --ext [js,ts,tsx]",
    "serve-debug": "nodemon --inspect dist/server.js",
    "server": "nodemon server.js",
    "start": "node server.js",
    "start-client": "node start-client.js",
    "watch-ts": "tsc -w",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\" \"yarn start-client\""
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "express": "^4.16.4",
    "express-validator": "^6.14.2",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.11",
    "nodemailer": "^6.8.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/react-datetime-picker": "^3.4.1",
    "@types/react-dom": "^18.0.9",
    "@types/react-modal": "^3.13.1",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-router-redux": "^5.0.19",
    "@types/zxcvbn": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "7.11.0",
    "eslint-plugin-jsdoc": "^39.4.0",
    "eslint-plugin-no-null": "^1.0.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.7.1",
    "redux-devtools-extension": "^2.13.9",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  },
  "bugs": {
    "url": "https://github.com/shanhuiyang/TypeScript-MERN-Starter/issues"
  },
  "homepage": "https://github.com/shanhuiyang/TypeScript-MERN-Starter#readme",
  "main": "server.js"
}
