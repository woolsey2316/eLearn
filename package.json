{
  "name": "elearn",
  "version": "1.0.0",
  "description": "e-learning platform",
  "author": "David Woolsey",
  "license": "MIT",
  "scripts": {
    "build": "cd client && yarn build && cd .. && yarn build-server",
    "build-server": "yarn build-ts",
    "build-ts": "tsc",
    "install-client": "cd client && yarn",
    "install-server": "yarn install --ignore-scripts",
    "client": "node start-client.js",
    "debug": "yarn build-server && yarn watch-debug",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "lint": "eslint -c .eslintrc.js --ext [js,ts,tsx]",
    "serve-debug": "nodemon --inspect dist/server.js",
    "server": "env-cmd -f .env.development nodemon server.js",
    "test-server": "npx cross-env env-cmd -f .env.test nodemon server.js",
    "start": "node server.js",
    "start-client": "node start-client.js",
    "test": "concurrently \"yarn run test-server\" \"yarn run client\"",
    "watch-ts": "tsc -w",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\" \"yarn start-client\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "express": "^4.16.4",
    "express-validator": "^6.14.2",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.11",
    "nodemailer": "^6.8.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "7.11.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.7.1",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  },
  "homepage": "https://github.com/shanhuiyang/TypeScript-MERN-Starter#readme",
  "main": "server.js"
}
