{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*", "server/types/*"]
    }
  },
  "include": [
    "client/**/*",
    "db/**/*",
    "models/**/*",
    "routes/**/*",
    "validation/**/*",
    "utils/**/*",
    "middleware/**/*",
    "./server.js",
    "./start-client.js",
    "./.eslintrc.js"
  ],
  "exclude": [
    "client/build/**/*",
    "client/cypress.config.ts",
    "node_modules",
    "client/cypress"
  ]
}
